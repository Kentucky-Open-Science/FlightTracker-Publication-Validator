            "required": true,
            "type": "sub_settings",
            "repeatable": false,
            "sub_settings": [
                {
                    "key": "cohort-api-key",
                    "name": "Cohort API Key <div class='api_label'></div>",
                    "required": false,
                    "type": "text",
                    "repeatable": true
                }
            ]
        }
    ],
    "no-auth-pages": [
        "pub_checker"
    ],
    "include-authors-in-api-info": true,
    "api-actions": {
        "get-citations-by-userid": {
            "description": "Select all citations belonging to a certain user by matching their UserID.",
            "access": ["auth"]
        }
    }
