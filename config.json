{
    "name": "Flight Tracker Publication Validator",
    "description": "A tool which creates surveys linking service requests with possible publications impacted, and then allows for verification from a researcher.",
    "namespace": "CAAIModules\\PublicationValidator",
    "framework-version": 12,
    "authors": [
        {
            "name": "Noah Perry",
            "email": "noah.perry@uky.edu",
            "institution": "University of Kentucky - CAAI"
        }
    ],
    "links": {
        "project": [
            {
                "name": "User Pub Checker",
                "icon": "fas fa-message",
                "url": "pages/pub_checker.php",
                "show-header-and-footer": true
            }
        ]
    },
    "project-settings": [
        {
            "key": "validation_form",
            "name": "Input the Instrument name for the validation form.",
            "required": true,
            "type": "text"
        },
        {
            "key": "api-key-desc",
